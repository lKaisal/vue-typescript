.col-075
  grid-size(4, 4, .75, .75, .75)

.col-2
  grid-size(4, 4, 2, 2, 2)

.col-1
  grid-size(4, 4, 1, 1, 1)

.col-11
  grid-size(4, 4, 1.1, 1.1, 1.1)

.col-3
  grid-size(4, 4, 3, 3, 3)

.table-row
  padding-top 0px
  padding-bottom 0px
  +gt-md()
    border-bottom 0
  +lt-md()
    &:nth-of-type(2n)
      background-color white
    &:nth-of-type(2n + 1)
      background-color $cDisabled
    padding-top 10px
    padding-bottom 10px
    border 1px solid $cLighterBorder
    &:first-child
      border-radius 5px 5px 0 0
    &:last-child
      border-radius 0 0 5px 5px
    &:not(:first-child)
      border-top 0px solid transparent
    &:before
      display none

.table-cell
  .table-row:last-child &
    border-bottom none
  +lt-md()
    width 100%
    justify-content flex-start
    text-align left
  +gt-md()
    border-bottom 1px solid $cLighterBorder
    .table-row:nth-of-type(2n) &
      background-color white
    .table-row:nth-of-type(2n + 1) &
      background-color $cDisabled
    .table-row:first-child &
      background-color white
    &.col-3
      min-width 250px
    &.col-2
      min-width 180px
    &.col-11
    &.col-1
      min-width 150px
    &.col-075
    &.col-05
      min-width 120px
    &.col-2:nth-of-type(2)
      flex-grow 1
    &:first-child
    &:nth-child(2)
    &:last-child
      z-index 1
      position sticky
      background-color white
      box-shadow 10px 3px 13px -5px rgba(0,0,0,0)
    &:first-child
      left 0
    &:nth-child(2)
      left 120px
    &:last-child
      right 0
    &.is-centered
      justify-content center
      text-align center
    &.is-sticky
      &:nth-of-type(2)
        box-shadow 10px 3px 13px -5px rgba(0,0,0,.12)
      &:last-child
        box-shadow -10px 3px 13px -5px rgba(0,0,0,0.12)
