.col-05
  grid-size(4, 4, .5, .5, .5)

.col-075
  grid-size(4, 4, .75, .75, .75)

.col-2
  grid-size(4, 4, 2, 2, 2)

.col-1
  grid-size(4, 4, 1, 1, 1)

.col-11
  grid-size(4, 4, 1.1, 1.1, 1.1)

.col-3
  grid-size(4, 4, 3, 3, 3)
  flex-grow 1

.table-row
  padding-top 0px
  padding-bottom 0px
  +lt-md()
    padding-top 10px
    padding-bottom 10px
    border 1px solid $cLighterBorder
    &:first-child
      border-radius 5px 5px 0 0
    &:last-child
      border-radius 0 0 5px 5px
    &:not(:first-child)
      border-top 0px solid transparent
    &:before
      display none

.table-cell
  +lt-md()
    width 100%
    justify-content flex-start
    text-align left
  &.col-3
    +gt-md()
      min-width 250px
  &.col-2
    +gt-md()
      min-width 180px
  &.col-11
  &.col-1
    +gt-md()
      min-width 150px
  &.col-075
  &.col-05
    +gt-md()
      min-width 120px
  &.is-centered
    +gt-md()
      justify-content center
      text-align center
  &.is-sticky
    &:nth-of-type(2)
      box-shadow 10px 0 13px -5px rgba(0,0,0,.12)
    &:last-child
      box-shadow -10px 0px 13px -5px rgba(0,0,0,0.12)
