@import './tools'

@keyframes blink
  0%, 100%
    opacity 1
  50%
    opacity 0

@keyframes fadeIn
  0%
    opacity 0
  100%
    opacity 1

@keyframes fadeOut
  0%
    opacity 1
  100%
    opacity 0

@keyframes placeholderShimmer
  0%
    background-position -100% 0
  100%
    background-position 100% 0

@keyframes pulsate
  0%, 100%
    transform scale(1)
  // 25%, 75%
  //   transform scale(1.025)
  50%
    transform scale(1.0125)
