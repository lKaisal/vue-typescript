@import './tools'

[v-cloak]
  display none !important

html
body
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale
  color $cPrimaryText
  -webkit-tap-highlight-color rgba($cBrand, .25)
  fontReg()

::selection
  background-color $cBrand
  color white

a
  padding 5px
  margin -5px
  color inherit
  text-decoration none
  transition()
  +hover()
    hoverStyle()

body
  &.modal-open
    overflow hidden

#__nuxt
#__layout
.app
  min-height 100vh
  height 100%

.page
  min-height 100%
  height 100%
  transition()
  &.v-enter
  &.v-leave-to
    opacity 0

.container
  grid-container()
  max-width none

.is-hidden
  display none

.modal
  z-index 999
  position fixed
  top 0
  right 0
  bottom 0
  left 0
  display flex
  justify-content center
  align-items center
  background-color rgba(0,0,0,.5)
  overflow hidden
  transition()
  &.v-enter
  &.v-leave-to
    opacity 0

.modal-msg
  z-index 1001

.modal-popup-container
  padding 50px
  max-width 100%
  border 1px solid rgba(0,0,0,.125)
  border-radius .25rem
  background-color white
  transition(transform)
  .v-enter &
  .v-leave-to &
    transform translateY(-30px)

.modal-icon-close
  color $cSecondaryText
  font-size 16px

.modal-conflict
  overflow scroll

h1.page-title
  margin-bottom 35px
  fontMedium()
  +xl()
    margin-bottom 50px

.el-loading-mask
  position fixed !important
  z-index 1000 !important

.el-menu-item.is-active
  border-color $cBrand !important

.bg-empty
  background linear-gradient(to right, #fafafa 8%, #f4f4f4 38%, #fafafa 54%)

.table-cell
  padding 10px
  display flex
  align-items center

.table-row
  position relative
  margin-top 35px
  &:before
    content ''
    position absolute
    right 0
    bottom 0
    left 0
    height 1px
    background-color $cLighterBorder

.js-voa
  transition(opacity\, transform)
  transition-duration $tSlow
  transition-delay 62.5ms

.js-voa-start
  opacity 0
  transform translateY(30px)

// FORM

.form-field
.form-row
  max-width 450px

.form-field
  position relative
  width-between-property 'margin-bottom' 1441 30 1920 35 true true
  transition()
  &.is-disabled
    pointer-events none
    >>> input
      background-color $cDisabled
      border-color $cLightBorder
      color $cPlaceholderText
      transition(background-color\, border-color\, color)
  &.v-enter
  &.v-leave-to
    opacity 0

.form-label
  display block
  margin-bottom 10px
  fontLight()
  font-size 15px
  color $cPrimaryText
  white-space nowrap
  transition(opacity)

.form-error
  position absolute
  top calc(100% + 7px)
  left 0
  fontLight()
  font-size 12px
  color $cDanger
  opacity 0
  transition()
  +lg()
    top calc(100% + 5px)
  .is-invalid &
    opacity 1

.form-input-wrapper
  position relative

.form-input
.form-select
.form-pickr
.el-input
.el-input__inner
.el-select:hover .el-input__inner
.el-input__inner:hover
  font-size 18px !important
  >>> input
    font-size 18px
  .is-filled &
    border-color $cBrand
    >>> input
      border-color $cBrand
  .is-invalid &
    border-color $cDanger !important
    >>> input
      border-color $cDanger !important

.form-input
.form-pickr
  display block
  .is-invalid &
    animation pulsate ease-in-out .5s both

.form-pickr
  .is-disabled &
    background-color $cDisabled
    border-color $cLightBorder
    color $cPlaceholderText
    transition(background-color\, border-color\, color)

.form-select
  display block
  // +lt-xl()
  //   margin-top 10px

.form-icon-clear
  z-index 1
  position absolute
  top 50%
  transform translateY(-50%)
  right 5px
  padding 5px
  color $cPlaceholderText
  cursor pointer
  pointer-events none
  opacity 0
  transition(opacity)
  .is-filled &
  .is-custom &
    pointer-events auto
    opacity 1
  .is-disabled &
    pointer-events none

.form-comment
  fontLight()
  font-style italic
  font-size 12px
  transition(opacity)
  &.is-transparent
    opacity 0