@import './tools'

[v-cloak]
  display none !important

html
body
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale
  color $cPrimaryText
  -webkit-tap-highlight-color rgba($cBrand, .25)
  fontReg()

::selection
  background-color $cBrand
  color white

a
  padding 5px
  margin -5px
  color inherit
  text-decoration none
  transition()
  +hover()
    hoverStyle()

body
  &.modal-open
    overflow hidden

#__nuxt
#__layout
.app
  min-height 100vh
  height 100%

.page
  min-height 100%
  height 100%
  transition()
  &.v-enter
  &.v-leave-to
    opacity 0

.container
  grid-container()
  max-width none

.is-hidden
  display none

.modal
  z-index 999
  position fixed
  top 0
  right 0
  bottom 0
  left 0
  display flex
  justify-content center
  align-items center
  background-color rgba(0,0,0,.5)
  overflow hidden
  transition()
  &.v-enter
  &.v-leave-to
    opacity 0

h1.page-title
  margin-bottom 35px
  fontMedium()

.el-loading-mask
  position fixed !important
